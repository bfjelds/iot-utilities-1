<Page x:Class="DeviceCenter.ViewDevicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeviceCenter"
      xmlns:props="clr-namespace:DeviceCenter.Strings"
      mc:Ignorable="d" 
      Title="{x:Static props:Strings.FindMyDeviceButton}" d:DesignHeight="500" d:DesignWidth="814.32">
    <Grid  VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel Orientation="Vertical">
            <TextBlock x:Uid="Title" FontSize="30" FontFamily="Segoe UI Semilight" Text="{x:Static props:Strings.FindMyDeviceButton}" HorizontalAlignment="Left" Margin="0,10,0,19"/>
            <ListView x:Name="ListViewDevices" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding DeviceName}" />
                        <GridViewColumn Header="Type" Width="200" DisplayMemberBinding="{Binding DeviceModel}"/>
                        <GridViewColumn Header="Connection" DisplayMemberBinding="{Binding IPaddress}"/>
                        <GridViewColumn>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Margin="6" Padding="6" Content="{x:Static props:Strings.DeviceListColConnection}" Click="ButtonConnect_Click" Visibility="{Binding ConnectVisible}" />
                                        <Button Margin="6" Padding="6" Content="{x:Static props:Strings.DeviceListColSettings}" Click="ButtonManage_Click" Visibility="{Binding ManageVisible}" />
                                        <Button Margin="6" Padding="6" Content="{x:Static props:Strings.DeviceDetailsDevicePortal}" Click="ButtonPortal_Click" Visibility="{Binding ManageVisible}" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
