<Page x:Class="DeviceCenter.ViewDevicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeviceCenter"
      xmlns:props="clr-namespace:DeviceCenter.Strings"
      mc:Ignorable="d" 
      Title="{x:Static props:Strings.FindMyDeviceButton}" Height="614.958" d:DesignWidth="1642.588">
    <Grid>
        <ListView x:Name="ListViewDevices" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding DeviceName}" />
                    <GridViewColumn Header="Type" Width="200" DisplayMemberBinding="{Binding DeviceModel}"/>
                    <GridViewColumn Header="Connection" DisplayMemberBinding="{Binding IPaddress}"/>
                    <GridViewColumn>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Margin="6" Padding="6" Content="Manage this device" Click="ButtonManage_Click" Visibility="{Binding ManageVisible}" />
                                    <Button Margin="6" Padding="6" Content="Connect this device" Click="ButtonConnect_Click" Visibility="{Binding ConnectVisible}" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
