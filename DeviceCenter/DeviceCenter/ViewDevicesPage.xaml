<Page x:Class="DeviceCenter.ViewDevicesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeviceCenter"
      mc:Ignorable="d" 
      Title="ViewDevicesPage">

    <Grid Background="{StaticResource ApplicationPageBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="108" />
                <RowDefinition Height="367" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid x:Name="CloudRow" HorizontalAlignment="Right" Grid.Row="1">
                <Canvas>
                    <Image x:Name="CloudImage" Canvas.Right="60" Source="Assets/cloud.png" />
                </Canvas>
            </Grid>

            <Grid x:Name="PageBackgroundRow" Grid.Row="3">
                <Image x:Name="PageBackgroundImage" Stretch="Fill" Source="Assets/background_and_trees.png" />
            </Grid>
        </Grid>
        <Grid>
            <DataGrid Margin="50 50 50 50" Name="discoveredDevices" Background="Transparent" RowBackground="{StaticResource RowBackgroundColorBrush}" AlternatingRowBackground="{StaticResource RowBackgroundAlternateColorBrush}"  AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="200" Binding="{Binding Path=DeviceName}" Header="Device Name" />
                    <DataGridTextColumn Width="300" Binding="{Binding Path=IPaddress}" Header="IP address" />
                    <DataGridTextColumn Width="300" Binding="{Binding Path=DeviceModel}" Header="Device Model" />
                    <DataGridTextColumn Width="200" Binding="{Binding Path=Architecture}" Header="Architecture" />
                    <DataGridTextColumn Width="300" Binding="{Binding Path=OSVersion}" Header="OS Version" />
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Page>
