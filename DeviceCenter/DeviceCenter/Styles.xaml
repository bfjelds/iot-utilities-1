<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DeviceCenter">
    <!--Colours-->
    <Color x:Key="AccentColor">#005a98</Color>
    <Color x:Key="DarkAccentColor">#0e548d</Color>
    <Color x:Key="AccentBorderColor">#6eb5ec</Color>

    <Color x:Key="BackgroundColor">#28A9E1</Color>
    <Color x:Key="ButtonBackgroundColor">#00769F</Color>
    <Color x:Key="RowBackgroundColor">#00769F</Color>
    <Color x:Key="RowBackgroundAlternateColor">#28A9E1</Color>
    <SolidColorBrush x:Key="ApplicationPageBackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="ApplicationPageControlForgroundTextBrushLight" Color="White" Opacity="0.3"/>
    <SolidColorBrush x:Key="ApplicationPageControlForgroundTextBrush" Color="White" Opacity="0.8"/>
    <SolidColorBrush x:Key="ApplicationPageButtonBackgroundBrush" Color="{StaticResource ButtonBackgroundColor}"/>

    <SolidColorBrush x:Key="RowBackgroundColorBrush" Color="{StaticResource RowBackgroundColor}"/>
    <SolidColorBrush x:Key="RowBackgroundAlternateColorBrush" Color="{StaticResource RowBackgroundAlternateColor}"/>
</ResourceDictionary>