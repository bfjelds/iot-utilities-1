<Page x:Class="DeviceCenter.About"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeviceCenter"
      xmlns:props="clr-namespace:DeviceCenter.Strings"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="About">

    <StackPanel>
        <TextBlock Text="{x:Static props:Strings.AboutTitle}" FontSize="24" />
        <TextBlock Text="{x:Static props:Strings.AboutSubtitle}" Margin="0 10 0 0"/>
        <TextBlock x:Name="labelVersion"  Text="--" />
        <TextBlock Text="{x:Static props:Strings.AboutCopyright}" Margin="0 20" />
        <TextBlock Margin="0 10">
            <Hyperlink NavigateUri="https://www.microsoft.com/en-us/privacystatement/default.aspx" RequestNavigate="Hyperlink_RequestNavigate">
                <TextBlock Text="{x:Static props:Strings.AboutPrivacy}" />
            </Hyperlink>
        </TextBlock>
        <TextBlock>
            <Hyperlink NavigateUri="https://www.microsoft.com/en-us/servicesagreement/" RequestNavigate="Hyperlink_RequestNavigate">
                <TextBlock Text="{x:Static props:Strings.AboutServicesAgreement}" />
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Page>
