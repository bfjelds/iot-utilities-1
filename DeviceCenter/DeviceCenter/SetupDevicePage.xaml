<Page x:Class="DeviceCenter.SetupDevicePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeviceCenter"
      mc:Ignorable="d" 
      Title="SetupDevicePage" Loaded="Window_Loaded">

    <Grid Background="{StaticResource ApplicationPageBackgroundBrush}">
        <Grid x:Name="Mainlayout">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="108" />
                <RowDefinition Height="367" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid x:Name="CloudRow" HorizontalAlignment="Right" Grid.Row="1">
                <Canvas>
                    <Image x:Name="CloudImage" Canvas.Right="60" Source="Assets/cloud.png" />
                </Canvas>
            </Grid>

            <Grid x:Name="PageBackgroundRow" Grid.Row="3">
                <Image x:Name="PageBackgroundImage" Stretch="Fill" Source="Assets/background_and_trees.png" />
            </Grid>

            <StackPanel Grid.Row="2" Margin="120 0 0 0">
                <TextBlock x:Uid="ChooseDevice" FontSize="30" FontFamily="Segoe UI Semilight" Foreground="{StaticResource ApplicationPageControlForgroundTextBrushLight}" VerticalAlignment="Bottom" Text="1. Choose your device"/>
                <ComboBox Margin ="20" HorizontalAlignment="Left" Width="200">
                    <ComboBoxItem>Minnow Board Max</ComboBoxItem>
                    <ComboBoxItem IsSelected="True">Raspberry Pi 2</ComboBoxItem>
                </ComboBox>
                <TextBlock x:Uid="SelectSDCard" FontSize="30" FontFamily="Segoe UI Semilight" Foreground="{StaticResource ApplicationPageControlForgroundTextBrushLight}" VerticalAlignment="Bottom" Text="2. Select the SD card your want to flash"/>
                <TextBlock x:Uid="SelectSDCardInfo" Margin="30 0 0 0" FontSize="20" FontFamily="Segoe UI Semilight" Foreground="{StaticResource ApplicationPageControlForgroundTextBrushLight}" VerticalAlignment="Bottom" Text="The SD card must be at least 3 GB in size"/>
                <ComboBox x:Name="RemoveableDevicesComboBox" Margin ="20" HorizontalAlignment="Left" Width="200">
                </ComboBox>
                <TextBlock x:Name="StatusMessageBox" x:Uid="SelectSDCardInfo" Margin="30 0 0 0" FontSize="20" FontFamily="Segoe UI Semilight" Foreground="{StaticResource ApplicationPageControlForgroundTextBrushLight}" VerticalAlignment="Bottom"/>
                <Button x:Uid="FlashButton" Grid.Row="4" FontSize="24" FontFamily="Segoe UI Light" Padding="30 5 30 5" Foreground="{StaticResource ApplicationPageControlForgroundTextBrush}" Background="{StaticResource ApplicationPageButtonBackgroundBrush}" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Flash SD Card" Click="FlashSDCard_Click"/>
            </StackPanel>
            <Grid>

            </Grid>
        </Grid>
        <Grid x:Name="WarningMessageOverlay">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="200" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel x:Name="ErrorMessage" Grid.Row="1" Background="WhiteSmoke" Visibility="Hidden">
                <TextBlock Grid.Column="1" Grid.Row="0" x:Name="tbWarningMessageHeader" Margin="10,10,0,18" FontSize="40" FontFamily="Segoe UI SemiLight" Text="Erase Content?"/>
                <TextBlock Grid.Column="1" Grid.Row="1" x:Name="tbWarningMessageText"  Margin="10,0,0,30" FontSize="20" FontFamily="Segoe UI Light" TextWrapping="Wrap" Text="Make sure you back up any files on your card before flashing. Flashing will erase anything previously stored on the card."/>
                <Grid x:Name="grdContinueCancel" Grid.Column="1" Grid.Row="2" Height="35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="25" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="1" x:Name="btnContinue" x:Uid="ViewDevicesButton" FontSize="14" FontFamily="Segoe UI Light" Padding="30 5 30 5" Foreground="{StaticResource ApplicationPageControlForgroundTextBrush}" Background="{StaticResource ApplicationPageButtonBackgroundBrush}" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Continue" Click="btnContinue_Click"/>
                    <Button Grid.Column="3" x:Name="btnCancel" x:Uid="SetupDeviceButton" FontSize="14" FontFamily="Segoe UI Light" Padding="30 5 30 5" Foreground="{StaticResource ApplicationPageControlForgroundTextBrush}" Background="{StaticResource ApplicationPageButtonBackgroundBrush}" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Cancel"  Click="btnCancel_Click" />
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
