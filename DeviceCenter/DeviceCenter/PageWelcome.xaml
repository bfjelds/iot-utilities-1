<Page x:Class="DeviceCenter.PageWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DeviceCenter"
      xmlns:props="clr-namespace:DeviceCenter.Strings"
      mc:Ignorable="d" 
      d:DesignWidth="800"
      Title="{x:Static props:Strings.AppNameDisplay}" FontFamily="IOT MDL2 Assets">
    <Grid>
        <ScrollViewer FontFamily="Segoe UI Light" VerticalScrollBarVisibility="Auto">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBlock Text="{x:Static props:Strings.IntroTitle}" FontSize="42.667" TextWrapping="Wrap" VerticalAlignment="Top" />
                <TextBlock FontFamily="./Assets/#IOT MDL2 Assets" Text="  " FontSize="32" Margin="0,20,0,0"/>
                <TextBlock Text="{x:Static props:Strings.IntroSubTitle}" FontSize="16" TextWrapping="Wrap" Margin="0,20,0,0"/>
                <TextBlock Text="{x:Static props:Strings.IntroMessage}" FontSize="16" TextWrapping="Wrap" Margin="0,20,0,0"/>
                <Button FontSize="20" Padding="30 5 30 5" HorizontalAlignment="Left" Content="{x:Static props:Strings.NewDeviceTitle}" Click="SetupDeviceButton_Click" Background="#FF3277B8" Foreground="White" Margin="0,20,0,0"></Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
